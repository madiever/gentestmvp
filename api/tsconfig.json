{
  "extends": "../server/tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "../",
    "baseUrl": "../",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "types": ["@vercel/node", "node"]
  },
  "include": ["**/*.ts", "../server/src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
