{
  "version": 2,
  "installCommand": "npm install",
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "api/[...].ts",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/[...].ts"
    },
    {
      "source": "/assets/(.*)",
      "destination": "/client/$1"
    },
    {
      "source": "/((?!api|assets|_next).*)",
      "destination": "/client/index.html"
    }
  ]
}
