{
  "version": 2,
  "installCommand": "npm install",
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "api/[...].ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/[...].ts"
    }
  ],
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/client/$1"
    }
  ]
}
